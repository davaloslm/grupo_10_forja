<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head') %>
        <link rel="stylesheet" href="../../../css/crear.css">
        <title>Editando <%= producto.nombre %>
        </title>
</head>

<body class="editar">

    <%- include('../partials/header') %>

        <main class="edit">
            <section class="product_container">
                <h1>
                    Editar Producto  <i class="fas fa-box"></i>
                </h1>

                <form class="todo_container" action="/admin/edit/<%= producto.id  %>?_method=PUT" method="POST">

                    <section class="visual_container">
                        <!-- ////imagen de archivo//// -->
                        <img src="/img/productos/<%= imagen[0].nombre %>" alt="">

                        <!-- /////titulo de producto//// -->
                        <h2>
                            <%= producto.nombre %> 
                        </h2>

                        <!-- /////Descripcion de Producto///// -->
                        <div class="selec info_des_container">
                            <p>Ingresá una descripción</p>
                            <textarea name="descripcion" id=""><%= producto.descripcion %></textarea>
                            <% if (locals.errors && errors.descripcion) { %>
                                <small class="errors"><%= errors.descripcion.msg %></small>
                            
                            <% } %>
                        </div>

                        <!-- ////////selector de enviar//////// -->
                        <div class="descuento_envio_container">
                            <div class="envio_container">
                                <input type="checkbox" name="envioGratis" id="envio" <% if(producto.envio ===1
                                    ){%>checked<%}%> >
                                    <label for="envioGratis">Envío</label>
                            </div>

                            <!-- ///////selector de % y Descuento /////// -->
                            <div class="descuento_container">
                                <label for="descuento">Descuento</label>
                                <select name="descuento" id="Descuento">
                                    <option value="" selected hidden>
                                        <%= producto.descuento %> %
                                    </option>
                                    <option value="5">5</option>
                                    <option value="10">10</option>
                                    <option value="15">15</option>
                                    <option value="20">20</option>
                                    <option value="25">25</option>
                                    <option value="30">30</option>
                                </select>
                            </div>
                        </div>
                    </section>


                    <section class="info_container">
                        <!-- /////seccion de talla///// -->
                        <p>Tallas</p>
                        <div class= "tallaLetra">
                            <p>Tallas</p>
                            /* hacer switch aquí */
                            <% for (let i = 0; i < talle.length; i++) { %>
                                <label for="talle<%= i %>"><%= talle[i]%></label>
                                <input id="inputTalles" class="talle<%= i %>" type="checkbox" name="talle" value="<%= i %>"  
                                <% if(producto.productoTalles.productoId === producto.id) { %>
                                    checked
                                <% } %>
                                >
                            <% } %>
                        </div>
                        <!-- /////Nombre de Producto///// -->
                        <div class="selec info_titulo_container">
                            <p>Nombre de Producto</p>
                            <input type="text" name="nombre" value="<%= producto.nombre %>">
                            <% if (locals.errors && errors.nombre) { %>
                                <small class="errors"><%= errors.nombre.msg %></small>
                            
                            <% } %>
                        </div>
                        
                        <!-- /////Precio de producto///// -->
                        <div class="selec info_precio_container">
                            <p>Precio $</p>
                            <input type="number" name="precio" value="<%= producto.precio %>">
                            <% if (locals.errors && errors.precio) { %>
                                <small class="errors"><%= errors.precio.msg %></small>
                            
                            <% } %>
                        </div>
                        <!-- /////Colores de producto///// -->
                        <div class="selec color_container">
                            <p>Colores</p>
                            <% for (let i = 0; i < colores.length; i++) { %>
                                <input id="inputColores" class="color<%= i %>" type="checkbox" name="talle" value="<%= i %>"  
                                <% if(producto.productoColores.productoId === producto.id) { %>
                                    checked
                                <% } %>
                                >
                            <% } %>

                        </div>
                        <!-- /////categoria de producto///// -->
                        <p>Categoría</p>
                        <div class="selec info_categoria_container">
                            <% for (let i = 0; i < categorias.length; i++) { %>
                                <label for="categoria<%= i %>"><%= categorias[i]%></label>
                                <input id="categoria" class="m" type="checkbox" name="talle" value="<%= i %>"  
                                <% if(producto.productoCategorias.productoId === producto.id) { %>
                                    checked
                                <% } %>
                                >
                            <% } %>

                        <% if (locals.errors && errors.categoria) { %>
                            <small class="errors"><%= errors.categoria.msg %></small>
                        
                        <% } %>
                        </div>

                    </section>
                    <!-- ///botones//// -->
                    <section class="button_container">
                        <button class="boton" type="submit">Crear</button>
                        <button class="boton" type="reset">Borrar</button>
                    </section>
                    
                    

                </form>
            </section>
            <section class="delete_container">
                        <form action="/admin/edit/<%=producto.id%>?_method=DELETE" method="POST">

                            <button type="submit">Eliminar producto</button>
                        </form>
                    </section>
        </main>
        <%- include('../partials/footer') %>
</body>

</html>