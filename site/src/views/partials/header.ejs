                        <a href="" class="submenu3">Sub1</a>
                        <a href="" class="submenu3">Sub2</a>
                        <a href="" class="submenu3">Sub3</a>
                        <a href="" class="submenu3">Sub4</a>
                    </div>
                </li>

                <li class="categorias" id="jiujitsu">
                    <span>Jiu-Jitsu</span>
                    <div class="submenu" id="submenu4">
                        <a href="/categories/Jiu-Jitsu" class="submenu4">Todos los productos</a>
                        <a href="" class="submenu4">Sub1</a>
                        <a href="" class="submenu4">Sub2</a>
                        <a href="" class="submenu4">Sub3</a>
                        <a href="" class="submenu4">Sub4</a>
                    </div>
                </li>

                <li class="categorias" id="entrenamiento">
                    <span>Entrenamiento</span>
                    <div class="submenu" id="submenu5">
                        <a href="/categories/Entrenamiento" class="submenu5">Todos los productos</a>
                        <a href="" class="submenu5">Sub1</a>
                        <a href="" class="submenu5">Sub2</a>
                        <a href="" class="submenu5">Sub3</a>
                        <a href="" class="submenu5">Sub4</a>
                    </div>
                </li>

            </ul>

        </div>

    </nav>

</header>